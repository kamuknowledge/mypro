										<div class="clear"></div>
									</div>
									<div class="clear"></div>
									<div class="row left width-50 half">
										<label>Event Address :</label>
										<input type="text" name="event_address" id="event_address" value="" />
										<div class="clear"></div>
									</div>
									<div class="row left width-50 half">
										<label>Type :</label>
										<select name="event_type" id="event_type"><option value="public">Public</option><option value="private">Private</option></select>
										<div class="clear"></div>
									</div>	
									<div class="clear"></div>
									<div class="row left width-50 half date">
										<label class="required">Start Date :</label>
										<input type="text" name="event_start_date" id="event_start_date" value="" class="datepicker required"/><input id="event_start_time" name="event_start_time" type="text" class="time" />
										<div class="clear"></div>
									</div>
									<div class="row left width-50 half date">
										<label class="required">End Date :</label>
										<input type="text" name="event_end_date" id="event_end_date" value="" class="datepicker required"/><input id="event_end_time" name="event_end_time" type="text" class="time" />
										<div class="clear"></div>
									</div>	
									<div class="clear"></div>
									<div class="error_div"></div>
									<div class="clear"></div>
									<div class="row chekbox">
										<input type="checkbox" name="allday" id="allday" value="1"/><label>Make Event As All Day Event</label>
										<div class="clear"></div>
									</div>
