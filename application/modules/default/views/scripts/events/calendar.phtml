							<div class="event-form">
								<form name="event_form_body" id="event_form_body" action="" method="post" enctype="multipart/form-data">
								<input type="hidden" id="submit_check" name="submit_check" value="1">
									<div class="heading">
										<h3>Basic Information</h3><span class="required">Required Information</span>
										<div class="clear"></div>
									</div>
									<div class="row left width-50 half">
										<label class="required">Event Name :</label>
